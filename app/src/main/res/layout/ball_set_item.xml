<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ballSetItemLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8">
        <ImageView
            android:id="@+id/ballSetItemImageId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:srcCompat="@drawable/ic_check_orange_18dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/ballSetItemKeyId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="0.4"
            android:layout_marginStart="4dp"
            android:textColor="@color/shokoColor"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/ballSetItemDrawId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.6"
            android:gravity="right"
            android:textColor="@color/ballYellow"
            android:textSize="14dp"/>
    </LinearLayout>

    <ru.sff.statistic.component.SixBallSet
        android:id="@+id/ballSetItemId"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/deviderColor" />

</LinearLayout>