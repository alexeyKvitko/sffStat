<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawResultContainerId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/resultTableHeaderLeftId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="14dp"
            android:textColor="@color/splashTextColor"
            android:gravity="left"
            android:text="Угадано"/>
        <TextView
            android:id="@+id/resultTableHeaderMiddleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="14dp"
            android:textColor="@color/splashTextColor"
            android:gravity="left"
            android:text="Победителей"/>
        <TextView
            android:id="@+id/resultTableHeaderRightId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="14dp"
            android:gravity="right"
            android:text="Выигрыш"
            android:textColor="@color/splashTextColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/resultTableRowSixLeftId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:textSize="16dp"
            android:text="6"
            android:textColor="@color/shokoColor"/>
        <TextView
            android:id="@+id/resultTableRowSixMiddleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:layout_weight="4.7"
            android:textSize="14dp"
            android:textColor="@color/shokoTextColor"/>
        <TextView
            android:id="@+id/resultTableRowSixRightId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="3"
            android:textSize="14dp"
            android:drawableEnd="@drawable/ic_currency_rub_gray_18dp"
            android:textColor="@color/shokoTextColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/resultTableRowFiveLeftId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="4.5"
            android:gravity="left"
            android:textSize="16dp"
            android:text="5"
            android:textColor="@color/shokoColor"/>
        <TextView
            android:id="@+id/resultTableRowFiveMiddleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:layout_weight="4.7"
            android:textSize="14dp"
            android:textColor="@color/shokoTextColor"/>
        <TextView
            android:id="@+id/resultTableRowFiveRightId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="3"
            android:textSize="14dp"
            android:drawableEnd="@drawable/ic_currency_rub_gray_18dp"
            android:textColor="@color/shokoTextColor"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/resultTableRowFourLeftId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="4.5"
            android:gravity="left"
            android:textSize="16dp"
            android:text="4"
            android:textColor="@color/shokoColor"/>
        <TextView
            android:id="@+id/resultTableRowFourMiddleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:layout_weight="4.7"
            android:textSize="14dp"
            android:textColor="@color/shokoTextColor"/>
        <TextView
            android:id="@+id/resultTableRowFourRightId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="3"
            android:textSize="14dp"
            android:drawableEnd="@drawable/ic_currency_rub_gray_18dp"
            android:textColor="@color/shokoTextColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/resultTableRowThreeLeftId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="4.5"
            android:gravity="left"
            android:textSize="16dp"
            android:text="3"
            android:textColor="@color/shokoColor"/>
        <TextView
            android:id="@+id/resultTableRowThreeMiddleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:layout_weight="4.7"
            android:textSize="14dp"
            android:textColor="@color/shokoTextColor"/>
        <TextView
            android:id="@+id/resultTableRowThreeRightId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="3"
            android:textSize="14dp"
            android:drawableEnd="@drawable/ic_currency_rub_gray_18dp"
            android:textColor="@color/shokoTextColor"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/resultTableRowTwoLeftId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="4.5"
            android:gravity="left"
            android:textSize="16dp"
            android:text="6"
            android:textColor="@color/shokoColor"/>
        <TextView
            android:id="@+id/resultTableRowTwoMiddleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:layout_weight="4.7"
            android:textSize="14dp"
            android:textColor="@color/shokoTextColor"/>
        <TextView
            android:id="@+id/resultTableRowTwoRightId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="3"
            android:textSize="14dp"
            android:drawableEnd="@drawable/ic_currency_rub_gray_18dp"
            android:textColor="@color/shokoTextColor"/>
    </LinearLayout>

</LinearLayout>