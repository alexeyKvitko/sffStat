<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lotoTurnItemId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/menuBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/turnDrawCountValueId"
                android:layout_width="72dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:background="@drawable/ball_turn_over"
                android:textColor="@color/shokoColor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/turnDrawCountLabelId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/splashTextColor"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/turnZeroLeftId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ballRed"
                android:textSize="14dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/turnDrawRangeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_weight="6"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/turnStartDrawId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shokoColor"
                    android:background="@drawable/border_bottom"
                    android:text="4565"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/turnEndDrawId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shokoColor"
                    android:background="@drawable/border_bottom"
                    android:text="3515"
                    android:textSize="18dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/turnStartDateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="546465464646546"
                    android:textColor="@color/grayTextColor"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/turnEndDateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayTextColor"
                    android:text="- 546465464646546"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/turnLeftLabelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/hint_color_inactive"
            android:textSize="14dp"
            android:text="@string/left_digit_label"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/turnLeftFiveContainerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/turnLeftFiveLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=">5 чисел"
                    android:textColor="@color/grayTextColor"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/turnLeftFiveId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shokoColor"
                    android:background="@drawable/border_bottom"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/turnLeftThreeContainerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/turnLeftThreeLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=">3 чисел"
                    android:textColor="@color/grayTextColor"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/turnLeftThreeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shokoColor"
                    android:background="@drawable/border_bottom"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/turnLeftOneContainerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/turnLeftOneLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 число"
                    android:textColor="@color/grayTextColor"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/turnLeftOneId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shokoColor"
                    android:background="@drawable/border_bottom"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="16dp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>