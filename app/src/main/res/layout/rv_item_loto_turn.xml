<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lotoTurnItemId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/menuBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/turnDrawCountValueId"
                android:layout_width="62dp"
                android:layout_height="42dp"
                android:textColor="@color/shokoColor"
                android:gravity="center"
                android:background="@drawable/ball_turn_over"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/turnDrawCountLabelId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/splashTextColor"
                android:textSize="14dp"/>

        </LinearLayout>

        <ru.sff.statistic.component.TwoCellStat
            android:id="@+id/turnDateLabelId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/turnZeroLeftId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/splashTextColor"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>