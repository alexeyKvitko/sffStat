<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/winTableContainerId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/winNumberId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textColor="@color/splashTextColor"
            android:gravity="center"
            android:text="Угаданных Чисел"/>
        <TextView
            android:id="@+id/winNumberCountId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/splashTextColor"
            android:text="Кол-во победителей"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/winNumberSixId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="@color/shokoColor"
            android:text="6"
            android:gravity="center"/>
        <TextView
            android:id="@+id/winNumberSixCountId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginEnd="32dp"
            android:textColor="@color/shokoColor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/winNumberFiveId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="@color/shokoColor"
            android:text="5"
            android:gravity="center"/>
        <TextView
            android:id="@+id/winNumberFiveCountId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginEnd="32dp"
            android:textColor="@color/shokoColor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/winNumberFourId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="@color/shokoColor"
            android:text="4"
            android:gravity="center"/>
        <TextView
            android:id="@+id/winNumberFourCountId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginEnd="32dp"
            android:textColor="@color/shokoColor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/winNumberThreeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="@color/shokoColor"
            android:text="3"
            android:gravity="center"/>
        <TextView
            android:id="@+id/winNumberThreeCountId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginEnd="32dp"
            android:textColor="@color/shokoColor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/winNumberTwoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="@color/shokoColor"
            android:text="2"
            android:gravity="center"/>
        <TextView
            android:id="@+id/winNumberTwoCountId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_marginEnd="32dp"
            android:textColor="@color/shokoColor"/>
    </LinearLayout>



</LinearLayout>