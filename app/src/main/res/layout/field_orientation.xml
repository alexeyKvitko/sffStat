<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/orientation1HorId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/spiral_1_hor"/>
        <ImageView
            android:id="@+id/orientation12RightId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/spiral_12_right_disabe"/>
        <ImageView
            android:id="@+id/orientation3RightId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/spiral_3_right_disabe"/>
        <ImageView
            android:id="@+id/orientation6RightId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/spiral_6_right_disabe"/>
        <ImageView
            android:id="@+id/orientation9RightId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/spiral_9_right_disabe"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/orientation45HorId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/spiral_45_hor_disable"/>
        <ImageView
            android:id="@+id/orientation12LeftId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/spiral_12_left_disabe"/>
        <ImageView
            android:id="@+id/orientation3LeftId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/spiral_3_left_disabe"/>
        <ImageView
            android:id="@+id/orientation6LeftId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/spiral_6_left_disabe"/>
        <ImageView
            android:id="@+id/orientation9LeftId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/spiral_9_left_disabe"/>
    </LinearLayout>

</LinearLayout>