<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:orientation="vertical">

        <ru.sff.statistic.component.AppHeader
            android:id="@+id/mainHeaderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/menuLayoutId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/menuRowOneId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/requestAllDrawId"
                                android:layout_width="match_parent"
                                android:layout_height="144dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/menu_frame_one"
                                android:orientation="vertical"
                                android:paddingBottom="12dp">

                                <ImageView
                                    android:layout_width="86dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    app:srcCompat="@drawable/menu_all" />

                                <TextView
                                    android:id="@+id/queryAllDrawsId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    android:text="ЗА ВСЕ ВРЕМЯ"
                                    android:textColor="@color/splashTextColor"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/requestByDrawId"
                                android:layout_width="match_parent"
                                android:layout_height="144dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="24dp"
                                android:layout_weight="1"
                                android:background="@drawable/menu_frame_one"
                                android:orientation="vertical"
                                android:paddingBottom="12dp">

                                <ImageView
                                    android:layout_width="86dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    app:srcCompat="@drawable/menu_draw" />

                                <TextView
                                    android:id="@+id/queryByDrawsId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    android:text="ПО ТИРАЖАМ"
                                    android:textColor="@color/splashTextColor"
                                    android:textSize="14dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/menuRowTwoId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/requestByDateId"
                                android:layout_width="match_parent"
                                android:layout_height="144dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/menu_frame_one"
                                android:orientation="vertical"
                                android:paddingBottom="12dp">

                                <ImageView
                                    android:layout_width="86dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    app:srcCompat="@drawable/menu_date" />

                                <TextView
                                    android:id="@+id/queryByDateId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    android:text="ПО ДАТАМ"
                                    android:textColor="@color/splashTextColor"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/requestByAmountId"
                                android:layout_width="match_parent"
                                android:layout_height="144dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="24dp"
                                android:layout_weight="1"
                                android:background="@drawable/menu_frame_one"
                                android:orientation="vertical"
                                android:paddingBottom="12dp">

                                <ImageView
                                    android:layout_width="86dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    app:srcCompat="@drawable/menu_amount" />

                                <TextView
                                    android:id="@+id/queryByAmountId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    android:text="ПО СУММАМ"
                                    android:textColor="@color/splashTextColor"
                                    android:textSize="14dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/menuRowThreeId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/requestByTurnId"
                                android:layout_width="match_parent"
                                android:layout_height="144dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/menu_frame_one"
                                android:orientation="vertical"
                                android:paddingBottom="12dp">

                                <ImageView
                                    android:layout_width="86dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    app:srcCompat="@drawable/menu_turn" />

                                <TextView
                                    android:id="@+id/queryByTurnId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    android:text="ПОЛНЫЙ КРУГ"
                                    android:textColor="@color/splashTextColor"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ballConsiderId"
                                android:layout_width="match_parent"
                                android:layout_height="144dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="24dp"
                                android:layout_weight="1"
                                android:background="@drawable/menu_frame_one"
                                android:orientation="vertical"
                                android:paddingBottom="12dp">

                                <ImageView
                                    android:layout_width="86dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    app:srcCompat="@drawable/menu_analis" />

                                <TextView
                                    android:id="@+id/queryByAnalisId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    android:text="АНАЛИЗ"
                                    android:textColor="@color/splashTextColor"
                                    android:textSize="14dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <ru.sff.statistic.component.LastFallInfo
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>