<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/header"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="24dp"
            app:srcCompat="@drawable/emoji_think" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menuSelectTitleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Статистика"
                android:textColor="@color/shokoColor"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/lotoTypeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loto_6_45"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/menu_frame"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:srcCompat="@drawable/menu_all" />

                <TextView
                    android:id="@+id/queryAllDrawsId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="ЗА ВСЕ ВРЕМЯ"
                    android:textColor="@color/splashTextColor"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/menu_frame"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="12dp">
                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:srcCompat="@drawable/menu_draw" />

                <TextView
                    android:id="@+id/queryByDrawsId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="ПО ТИРАЖАМ"
                    android:textColor="@color/splashTextColor"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/menu_frame"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:srcCompat="@drawable/menu_date" />

                <TextView
                    android:id="@+id/queryByDateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="КАЛЕНДАРЬ"
                    android:textColor="@color/splashTextColor"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/menu_frame"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="12dp">
                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:srcCompat="@drawable/menu_magnit" />

                <TextView
                    android:id="@+id/queryByMagnetId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="МАГНИТ"
                    android:textColor="@color/splashTextColor"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>