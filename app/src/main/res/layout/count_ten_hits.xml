<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lotoTurnItemId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/menuBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countTenHitstValueId"
                android:layout_width="72dp"
                android:layout_height="42dp"
                android:background="@drawable/ball_ten_hits"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/goldColor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/countTenHitstLabelId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="выпадений в "
                android:textColor="@color/splashTextColor"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/countTenHitstCaseId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1745 случаях"
                android:textColor="@color/splashTextColor"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/countTenHitsRangeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hitsDrawLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="послений случай"
                    android:textColor="@color/grayTextColor"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/hitsStartDrawId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:text="4565"
                    android:textColor="@color/shokoColor"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/hitsEndDrawId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:text=" - 3515"
                    android:textColor="@color/shokoColor"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hitsStartDateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="546465464646546"
                    android:textColor="@color/grayTextColor"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/hitsEndDateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 546465464646546"
                    android:textColor="@color/grayTextColor"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>