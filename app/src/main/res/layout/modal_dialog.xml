<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageDialogLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    android:background="@color/transparentToastBackground">
    <androidx.cardview.widget.CardView
        android:id="@+id/messageDialogContainerId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-12dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="7dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/modalDialogButtonsId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/modalDialogCardBlueId"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        app:cardBackgroundColor="@color/menuBackground"
                        card_view:cardCornerRadius="8dp"
                        card_view:cardElevation="8dp">
                        <TextView
                            android:id="@+id/modalDialogBlueBtnId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/shokoColor"
                            android:textSize="16dp"
                            android:drawablePadding="6dp"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/modalDialogCardWhiteId"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="145dp"
                        android:layout_height="120dp"
                        card_view:cardCornerRadius="8dp"
                        card_view:cardElevation="8dp">
                        <TextView
                            android:id="@+id/modalDialogWhiteBtnId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deviderColor"
                            android:drawablePadding="4dp"
                            android:textSize="16dp"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/modalDialogTitleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textColor="@color/splashTextColor"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/modalErrorFieldId"
                style="@style/errorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error_required_field"
                android:visibility="gone" />
            <TextView
                android:id="@+id/modalDialogMessageId"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp"
                android:gravity="center_horizontal"
                android:textColor="@color/deviderColor"
                android:textSize="16dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/modalTextLayoutId"
                style="@style/AppInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                app:errorEnabled="false"
                app:errorTextAppearance="@style/errorText">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/modalTextValueId"
                    style="@style/AppEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="12"
                    android:theme="@style/editTextTheme" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>