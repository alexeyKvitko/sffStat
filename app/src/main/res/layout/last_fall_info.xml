<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/lastFallDrawLabelId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/shokoColor"
        android:textSize="18dp"
        android:text="@string/previous_draw_label"/>
    <TextView
        android:id="@+id/lastFallDrawValueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/shokoColor"
        android:background="@drawable/border_bottom"
        android:textSize="18dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/lastFallDateTimeValueId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/shokoColor"
        android:textSize="14dp" />

    <ru.madest.statistic.component.SixBallSet
        android:id="@+id/lastFallDrawId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="12dp" />
    <TextView
        android:id="@+id/superPrizeLabelId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/goldColor"
        android:text="СУПЕРПРИЗ"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/superPrizeValueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:textColor="@color/shokoTextColor"
        android:drawableRight="@drawable/ic_currency_rub_gray_18dp"
        android:textSize="20dp" />

</LinearLayout>