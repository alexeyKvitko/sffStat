<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/arrowLeftId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:srcCompat="@drawable/ic_arrow_left_bold_outline_black_24dp" />

    <TextView
        android:id="@+id/arrowSelectorTextId"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/shokoTextColor"
        android:text="Сентябрь" />

    <ImageView
        android:id="@+id/arrowRightId"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_right_bold_outline_black_24dp" />

</LinearLayout>