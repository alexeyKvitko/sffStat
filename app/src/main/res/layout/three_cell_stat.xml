<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/threeCellStatContainerId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

          <TextView
            android:id="@+id/leftThreeCellValueId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shokoColor"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/leftThreeCellCommentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/splashTextColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/middleThreeCellValueId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/shokoColor"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/middleThreeCellCommentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/splashTextColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/rightThreeCellValueId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shokoColor"
            android:layout_marginLeft="4dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/rightThreeCellCommentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/splashTextColor"
            android:textSize="14dp" />

</LinearLayout>

