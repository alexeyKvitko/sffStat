<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AllResultsFragment">

    <include layout="@layout/please_wait" />

    <ScrollView
        android:id="@+id/scrollContainerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drawTitleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/draws_label"
                android:textColor="@color/shokoTextColor"
                android:textSize="22dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/firstDrawNumId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shokoColor"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/firstDrawDateId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/splashTextColor"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lastDrawNumId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shokoColor"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/lastDrawDateId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/splashTextColor"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="16dp"
                android:background="@color/shokoColor" />

            <TextView
                android:id="@+id/oftenDigitId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/often_digit_label"
                android:textColor="@color/grayTextColor"
                android:textSize="16dp" />

            <ru.sff.statistic.component.SixBallSet
                android:id="@+id/biggerBallSetId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/lessDigitId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/less_digit_number"
                android:textColor="@color/grayTextColor"
                android:textSize="16dp" />

            <ru.sff.statistic.component.SixBallSet
                android:id="@+id/lessBallSetId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/middleDigitId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/middle_digit_number"
                android:textColor="@color/grayTextColor"
                android:textSize="16dp" />

            <ru.sff.statistic.component.SixBallSet
                android:id="@+id/middleBallSetId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="16dp"
                android:background="@color/shokoColor" />

            <TextView
                android:id="@+id/totalTicketLabelId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/total_ticket_label"
                android:textColor="@color/grayTextColor"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalTicketValueId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shokoColor"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/totalTicketDescId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/splashTextColor"
                        android:text="Всего"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/averangeTicketValueId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shokoColor"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/averangeTicketDescId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/splashTextColor"
                        android:text="В среднем за тираж"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="16dp"
                android:background="@color/shokoColor" />

            <TextView
                android:id="@+id/resultOnTableId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/result_field_number"
                android:textColor="@color/grayTextColor"
                android:textSize="16dp" />

            <ru.sff.statistic.component.FiveNineTable
                android:id="@+id/fiveNineTableId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tableOrientationId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="@string/table_orientation"
                android:textColor="@color/grayTextColor"
                android:textSize="16dp" />

            <ru.sff.statistic.component.FieldOrientation
                android:id="@+id/fieldOrientationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp" />


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/biggerButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:checked="true"
                    android:text="@string/often_digit_label"
                    android:textColor="@color/grayTextColor"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/lessButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:checked="false"
                    android:text="@string/less_digit_number"
                    android:textColor="@color/grayTextColor"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/middleButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:checked="false"
                    android:text="@string/middle_digit_number"
                    android:textColor="@color/grayTextColor"
                    android:textSize="16dp" />


            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</FrameLayout>