<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/border_corner"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ballConsiderNumberId"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ball_vialet"
            android:gravity="center"
            android:textColor="@color/ballVialet"
            android:textSize="16dp" />

        <ru.madest.statistic.component.TwoCellStat
            android:id="@+id/ballConsiderRepeatId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/considerLastValueId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/splashTextColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/considerDateTimeValueId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/splashTextColor"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/considerTwoLabelId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/consaider_pairs"
            android:textColor="@color/splashTextColor"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/considerTwoShowBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:text="@string/button_show"
                android:textColor="@color/shokoColor"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <ru.madest.statistic.component.BallSetWithDesc
        android:id="@+id/considerTwoMaxId"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/considerTwoBodyId"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/considerThreeLabelId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/consaider_threes"
            android:textColor="@color/splashTextColor"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/considerThreeShowBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:text="@string/button_show"
                android:textColor="@color/shokoColor"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <ru.madest.statistic.component.BallSetWithDesc
        android:id="@+id/considerThreeMaxId"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/considerThreeBodyId"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/considerFourLabelId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/consaider_fours"
            android:textColor="@color/splashTextColor"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/considerFourShowBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:text="@string/button_show"
                android:textColor="@color/shokoColor"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <ru.madest.statistic.component.BallSetWithDesc
        android:id="@+id/considerFourMaxId"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/considerFourBodyId"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>


</LinearLayout>